#ifndef network
#define network
#include "gsg_socket.h"

/*
  Это первый класс, нпсаный ориентируясь на диаграмму класов,
  созданную в начале лета.
 */

class NetworkClient
{
private:
  int client_sock_fd;
  sockaddr_in server_addr;
  bool valid;
public:
  NetworkClient();
  ~NetworkClient();
  int ConnectToServer(int port, char* ipstr);
  int Disconnect();
  int LoginToServer(char* pass, char* login);
  int SendMsg(char* msg ,/*char* who,*/ int size);
  int WaitMsg(char* buffer, int size);
  bool GetValid() const {return valid;}
};

#endif
